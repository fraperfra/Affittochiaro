# Affittochiaro Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# FRONTEND (Vite - prefix with VITE_)
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:3001/api/v1

# AWS Cognito
VITE_COGNITO_USER_POOL_ID=eu-north-1_xxxxxxxxx
VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe (Public Key)
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx

# WebSocket
VITE_WEBSOCKET_URL=wss://ws.affittochiaro.it

# Google Gemini (for AI features)
VITE_GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# BACKEND (Lambda Environment)
# ===========================================

# AWS Region
AWS_REGION=eu-north-1

# Database (RDS PostgreSQL)
DB_HOST=affittochiaro-db.xxxxxxxxxx.eu-north-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=affittochiaro
DB_USER=admin
DB_PASSWORD=your_secure_password

# Stripe (Secret Keys)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs
STRIPE_PRICE_BASE=price_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PROFESSIONAL=price_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_CREDITS_10=price_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_CREDITS_25=price_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_CREDITS_50=price_xxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS SES (Email)
SES_FROM_EMAIL=noreply@affittochiaro.it

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# S3 Bucket
S3_BUCKET_NAME=affittochiaro-uploads-dev

# WebSocket
WEBSOCKET_ENDPOINT=xxxxxxxxxx.execute-api.eu-north-1.amazonaws.com/dev
WEBSOCKET_CONNECTIONS_TABLE=affittochiaro-ws-connections-dev
